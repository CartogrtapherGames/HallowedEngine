<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <AssemblyVersion>1.0.0.0</AssemblyVersion>
        <FileVersion>1.0.0.0</FileVersion>
        <NeutralLanguage>en</NeutralLanguage>
        <Title>Hallowed Engine</Title>
        <Authors>Nio Kasgami</Authors>
        <Description>An monogame framework that serve to simplify the development of 2D games.</Description>
        <Copyright>MIT Licensed</Copyright>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <RootNamespace>Hallowed</RootNamespace>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.2.1105">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>
</Project>